<!doctype html>
<html>
  <head>
    <title>Socket.IO chat</title>
    <link rel="stylesheet" href="index.css">
  </head>
  <body>
      <div class="home">
          <div class="home-container">
              <div class="create">
                  <div>
                    <form action="/" method="post">
                      <input placeholder="Username" type="text" id="create-username">
                      <button type="submit">Create game</button>
                    </form>
                    
                  </div>
                  
              </div>
              <div class="join">
                  <div>
                    <span class="error"></span>
                    <form action="" method="post">
                      <input placeholder="Username" type="text" id="join-username">
                      <input placeholder="Room number" type="number" id="join-room">
                      <button type="submit">Join game</button>
                    </form>
                    
                  </div>
                  
              </div>
          </div>
      </div>
      <main>
        <div class="game">
            <div class="board">
              <div class="playground">
                
              </div>
            </div>
        </div>
        <div class="messages">
            <ul id="messages"></ul>
            <form action="">
              <input id="chat-input" autocomplete="off" /><button>Send</button>
            </form>
          </div>
      </main>
      
    
    <script src="/socket.io/socket.io.js"></script>
    <script src="./dist/bundle.js"></script>
  </body>
</html>